{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 建置使用中檔案",
			"command": "C:/LLVM/bin/g++.exe",
			"args": [
				"-g3",
				"-Wall",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:/LLVM/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "編譯器: C:/LLVM/bin/g++.exe"
		},
		{
			"type": "shell",
			"label": "Run c++ program: g++.exe",
			"command": "C:/LLVM/bin/g++.exe -g3 -Wall \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" ;\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
			"options": {
				"cwd": "C:/LLVM/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "編譯器: C:/LLVM/bin/g++.exe"
		}
	]
}